<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
        .card-body{
            background: #f5f5f5;
        }
    </style>
</head>

<body>
   <%- include('partials/header') %>
        <h1>Welcome to the blog</h1>
    <% if (posts.length === 0) { %>
        <p>No posts to show.</p>
    <% } else { %>
        <% posts.forEach(function(post) { %>
            <div class="card w-75 m-auto mb-5">
                <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <%= post.content %><br><br>
                    <small class="text-muted"> Written by author <a href="/auth/profile/<%= post.authorId %>">
                        <%=post.author.name%>
                    </a> at <%= post.createdAt.toLocaleString() %></small><br>
                    <small class="text-muted">
                        <i>Category </i>: <%= post.category.name %></a><br><br>
                    </small>

                    <!--show all comments under each post-->
                    <% if (post.comments.length > 0) { %>
                        <div class="mt-3">
                            <strong>Comments:</strong>
                            <ul class="list-group list-group-flush">
                            <% post.comments.forEach(function(comment) { %>
                                <li class="list-group-item">
                                <%= comment.content %> 
                                <small class="text-muted"> â€” <%= comment.author.name %> at <%= comment.createdAt.toLocaleString() %></small>
                                </li>
                            <% }) %>
                            </ul>
                        </div>
                    <% } %>

                    <form action="/comments" method="POST" class="mt-3">
                        <input type="hidden" name="postId" value="<%= post.id %>">
                        <div class="input-group">
                            <input 
                            type="text" 
                            name="comment" 
                            placeholder="Leave a comment..." 
                            class="form-control"
                            required
                            >
                            <button type="submit" class="btn btn-primary">Post</button>
                        </div>
                    </form>
                </div>
            </div>
        <% }); %>  
        <nav aria-label="Page navigation example text-center">
            <ul class="pagination w-100 justify-content-center">
                <% if (hasPreviousPage) { %>
                <li class="page-item">
                <a class="page-link" href="?page=<%= previousPage %>">Previous</a>
                </li>
                <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
                <% } %> <% if (hasNextPage) { %>
                <li class="page-item">
                <a class="page-link" href="?page=<%= nextPage %>">Next</a>
                </li>
                <% } %>
            </ul>
        </nav>          
    <% } %>
   
</body>

</html>