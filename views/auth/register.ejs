<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register | MyBlog</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet"/>

  <style>
    .brand {
      font-family: "Lora", serif;
      position: absolute;
      top: 20px;
      left: 30px;
      font-size: 2rem;
      font-weight: bold;
      color:rgb(32, 82, 97);
    }
  </style>
</head>
<body class="bg-light d-flex justify-content-center align-items-center min-vh-100 position-relative">

  <!-- Brand top-left -->
  <div class="brand">üìù MyBlog</div>

  <!-- Register card -->
  <div class="card shadow-sm border mt-5 rounded-4 p-4 w-100" style="max-width: 600px;">
    <h2 class="text-center mb-3">Create Account</h2>
    <p class="text-center text-muted mb-4">Fill in your details to get started with your blogging journey.</p>

    <form action="/auth/register" method="POST" id="registerForm">
      <!-- Profile Picture Preview -->
      <div class="text-center mb-3">
        <img src="/images/default-avatar.png" alt="Profile Preview" class="rounded-circle" id="profilePreview" width="100" height="100"/>
      </div>

      <!-- Profile Picture URL -->
      <div class="form-floating mb-3">
        <input type="url" class="form-control" id="profilePictureUrl" name="profilePictureUrl" placeholder="Image URL" onchange="updateProfilePreview(this.value)" />
        <label for="profilePictureUrl"><i class="bi bi-image me-2"></i>Profile Picture URL</label>
      </div>

      <!-- Name -->
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required />
        <label for="name"><i class="bi bi-person me-2"></i>Full Name</label>
      </div>

      <!-- Email -->
      <div class="form-floating mb-3">
        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required />
        <label for="email"><i class="bi bi-envelope me-2"></i>Email Address</label>
      </div>

      <!-- Password -->
      <div class="form-floating mb-3 position-relative">
        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required minlength="6" />
        <label for="password"><i class="bi bi-lock me-2"></i>Password</label>
        <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y me-2 btn-sm" onclick="togglePassword()" tabindex="-1">
          <i class="bi bi-eye" id="toggleIcon"></i>
        </button>
      </div>

      <!-- Section: Professional Details -->
      <h6 class="text-muted mt-4">Professional Details</h6>

      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="title" name="title" placeholder="Title" />
        <label for="title"><i class="bi bi-briefcase me-2"></i>Professional Title</label>
      </div>

      <div class="form-floating mb-3">
        <textarea class="form-control" id="bio" name="bio" placeholder="Bio" style="height: 100px;"></textarea>
        <label for="bio"><i class="bi bi-chat-quote me-2"></i>Bio</label>
      </div>

      <!-- Section: Social Links -->
      <h6 class="text-muted mt-4">Social Links</h6>

      <div class="form-floating mb-3">
        <input type="url" class="form-control" id="githubUrl" name="githubUrl" placeholder="GitHub URL" />
        <label for="githubUrl"><i class="bi bi-github me-2"></i>GitHub</label>
      </div>

      <div class="form-floating mb-3">
        <input type="url" class="form-control" id="twitterUrl" name="twitterUrl" placeholder="Twitter URL" />
        <label for="twitterUrl"><i class="bi bi-twitter me-2"></i>Twitter</label>
      </div>

      <div class="form-floating mb-4">
        <input type="url" class="form-control" id="linkedinUrl" name="linkedinUrl" placeholder="LinkedIn URL" />
        <label for="linkedinUrl"><i class="bi bi-linkedin me-2"></i>LinkedIn</label>
      </div>

      <!-- Terms Agreement -->
      <div class="form-check mb-4">
        <input class="form-check-input" type="checkbox" id="agreeTerms" required />
        <label class="form-check-label text-muted" for="agreeTerms">
          I agree to the 
          <a href="/terms" class="text-decoration-none text-primary">Terms of Service</a> and 
          <a href="/privacy" class="text-decoration-none text-primary">Privacy Policy</a>
        </label>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-primary w-100 mb-3">
        <i class="bi bi-person-plus me-2"></i>Create Account
      </button>

      <!-- Divider -->
      <div class="text-center text-muted mb-3">or</div>

      <!-- Login Link -->
      <a href="/auth/login" class="btn btn-secondary w-100">
        <i class="bi bi-box-arrow-in-right me-2"></i>Already have an account? Sign In
      </a>
    </form>
  </div>

  <script>
    function togglePassword() {
      const input = document.getElementById("password");
      const icon = document.getElementById("toggleIcon");
      if (input.type === "password") {
        input.type = "text";
        icon.classList.replace("bi-eye", "bi-eye-slash");
      } else {
        input.type = "password";
        icon.classList.replace("bi-eye-slash", "bi-eye");
      }
    }

    function updateProfilePreview(url) {
      const preview = document.getElementById("profilePreview");
      preview.src = url || "/images/default-avatar.png";
    }
  </script>

</body>
</html>