<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= user.name %>'s Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f5f5f5;
      }

      .profile-container {
        max-width: 800px;
        margin: 50px auto;
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      }

      .profile-photo {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 20px;
        border: 4px solid #28a745;
      }

      .card {
        background-color: #ffffff;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/header') %>

    <div class="container profile-container text-center">
      <img
        src="<%= user.photo %>"
        alt="user photo"
        class="profile-photo"
      />
      <h1 class="mt-2"><%= user.name %>'s Profile</h1>

      <% if (user.posts.length === 0) { %>
        <p class="text-muted mt-4">No posts to show.</p>
      <% } else { %>
        <h3 class="text-start mt-5 mb-4">Posts by <%= user.name %>:</h3>
        <% user.posts.forEach(function(post) { %>
          <div class="card mb-4 text-start">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.content %></p>
              <p class="text-muted">
                Posted on <%= post.createdAt.toLocaleDateString() %>
              </p>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </body>
</html>
