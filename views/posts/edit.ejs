<a href="/posts" class="btn btn-success">Back to Posts</a>

  <form action="/posts/edit/<%= post.id %>" method="POST" class="w-75 m-auto shadow p-5">
    <h1>Edit Post</h1>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= post.title %>" class="form-control" required>
    <br>
    <label for="content">Content:</label>
    <textarea id="content" name="content" rows="10" class="form-control" required>
      <%= post.content %>
    </textarea>
    <br>
    <button type="submit" class="btn btn-primary">Update Post</button>
  </form>