<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Blog Header</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/header.css" />
</head>
<body>
  <header>
    <nav class="navbar">
      <!-- LOGO on the left -->
      <a href="/" class="logo">üìù MyBlog</a>

      <!-- NAV LINKS + Search + Category + Login -->
      <div class="nav-right">
        <a href="/posts" class="nav-link">My Posts</a>

        <!-- Search Form -->
        <form action="/posts/search" method="GET">
          <input type="text" name="search" class="search-bar" placeholder="Search Posts">
        </form>

        <!-- Category Select -->
        <form id="categoryForm" method="GET" action="/">
          <select name="categoryId" id="categoryId" class="form-control" onchange="document.getElementById('categoryForm').submit()">
            <option value="">All categories</option>
            <% categories.forEach(category => { %>
              <option value="<%= category.id %>" <%= selectedCategory == category.id ? 'selected' : '' %>><%= category.name %></option>
            <% }) %>
          </select>
        </form>


        <% if (userId) { %>
          <a href="/auth/logout" class="nav-link">Logout</a>
        <% } else { %>
          <a href="/auth/login" class="login-button">Login</a>
        <% } %>
      </div>
    </nav>
  </header>
</body>
</html>
