<section class="explore-topics-section">
  <div class="container">
    
    <!-- Header Section -->
    <div class="topics-header text-center py-5 mb-5">
      <h1 class="display-3 fw-normal text-dark mb-3">Explore Topics</h1>
      <p class="lead text-muted mb-4">Discover stories and ideas across subjects that matter to you</p>
      
      <!-- Simple Search -->
      <div class="row justify-content-center">
        <div class="col-md-6">
          <form method="GET" action="/search-topics">
            <div class="search-container">
              <input
                type="text"
                name="q"
                class="form-control search-input-topic"
                placeholder="Search topics..."
                autocomplete="off"
              />
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Trending Topics Bar -->
    <div class="trending-section mb-5">
      <div class="d-flex align-items-center justify-content-between mb-3">
        <h6 class="text-uppercase text-muted fw-bold mb-0 letter-spacing">Trending Topics</h6>
        <div class="scroll-controls">
          <button class="scroll-btn" id="scrollLeft" aria-label="Scroll left">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15,18 9,12 15,6"></polyline>
            </svg>
          </button>
          <button class="scroll-btn" id="scrollRight" aria-label="Scroll right">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9,6 15,12 9,18"></polyline>
            </svg>
          </button>
        </div>
      </div>
      
      <div class="topics-scroll-container">
        <div class="topics-scroll" id="topicsScroll">
          <% if (categories && categories.length > 0) { %>
            <% categories.forEach(category => { %>
              <% if (category.topics && category.topics.length > 0) { %>
                <% category.topics.forEach(topic => { %>
                  <a href="/topics/<%= topic.slug %>" class="base-btn">
                    <%= topic.name %>
                  </a>
                <% }) %>
              <% } %>
            <% }) %>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Categories Section -->
    <div class="categories-section">
      <h6 class="text-uppercase text-muted fw-bold mb-4 letter-spacing">Browse by Category</h6>
      
      <% if (categories && categories.length > 0) { %>
        <div class="row">
          <% categories.forEach(category => { %>
            <div class="col-lg-6 mb-4">
              <div class="category-item">
                <div class="category-header mb-3">
                  <h3 class="category-title">
                    <a href="/topics/<%= category.slug %>" class="text-decoration-none text-dark">
                      <%= category.name %>
                    </a>
                  </h3>
                  <p class="category-meta text-muted">
                    <%= category.topics?.length || 0 %> topics
                  </p>
                </div>
                
                <% if (category.topics && category.topics.length > 0) { %>
                  <div class="topics-list">
                    <% category.topics.slice(0, 6).forEach(topic => { %>
                      <a href="/topics/<%= topic.slug %>" class="topic-link">
                        <%= topic.name %>
                      </a>
                    <% }) %>
                    
                    <% if (category.topics.length > 6) { %>
                      <a href="/topics/<%= category.slug %>" class="topic-link more-link">
                        +<%= category.topics.length - 6 %> more
                      </a>
                    <% } %>
                  </div>
                <% } else { %>
                  <p class="text-muted">No topics available</p>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-state text-center py-5">
          <p class="text-muted">No topics available yet.</p>
        </div>
      <% } %>
    </div>
  </div>
</section>

<style>
/* Base Styles */
.explore-topics-section {
  background: #fff;
  min-height: 100vh;
  padding: 2rem 0;
}

/* Typography */
.letter-spacing {
  letter-spacing: 0.5px;
}

/* Header */
.topics-header h1 {
  font-family: 'Georgia', serif;
  font-weight: 400;
  color: #242424;
}

.topics-header .lead {
  font-size: 1.25rem;
  color: #6b6b6b;
  font-weight: 400;
}

/* Search */
.search-container {
  position: relative;
}

/* Trending Topics */
.trending-section {
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 2rem;
}

.scroll-controls {
  display: flex;
  gap: 8px;
}

.scroll-btn {
  background: none;
  border: 1px solid #e6e6e6;
  border-radius: 50%;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6b6b6b;
  cursor: pointer;
  transition: all 0.2s ease;
}

.scroll-btn:hover {
  border-color: #1a8917;
  color: #1a8917;
}

.scroll-btn:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

.topics-scroll-container {
  overflow: hidden;
  position: relative;
}

.topics-scroll {
  display: flex;
  gap: 12px;
  overflow-x: auto;
  scroll-behavior: smooth;
  padding: 16px 0;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.topics-scroll::-webkit-scrollbar {
  display: none;
}

.topic-chip {
  background: #f2f2f2;
  color: #242424;
  text-decoration: none;
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 14px;
  white-space: nowrap;
  transition: all 0.2s ease;
  border: 1px solid transparent;
}

.topic-chip:hover {
  background: #1a8917;
  color: #fff;
  text-decoration: none;
}

/* Categories */
.categories-section {
  padding-top: 2rem;
}

.category-item {
  padding: 1.5rem 0;
  border-bottom: 1px solid #f2f2f2;
}

.category-item:last-child {
  border-bottom: none;
}

.category-title {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.category-title a:hover {
  color: #1a8917 !important;
}

.category-meta {
  font-size: 14px;
  margin-bottom: 0;
}

.topics-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
}

.topic-link {
  color: #6b6b6b;
  text-decoration: none;
  font-size: 15px;
  padding: 4px 0;
  border-bottom: 1px solid transparent;
  transition: all 0.2s ease;
}

.topic-link:hover {
  color: #1a8917;
  text-decoration: none;
  border-bottom-color: #1a8917;
}

.more-link {
  font-weight: 500;
  color: #1a8917;
}

/* Empty State */
.empty-state {
  color: #6b6b6b;
}

/* Responsive */
@media (max-width: 768px) {
  .topics-header h1 {
    font-size: 2.5rem;
  }
  
  .scroll-controls {
    display: none;
  }
  
  .topics-scroll {
    overflow-x: auto;
  }
  
  .topics-list {
    flex-direction: column;
    gap: 8px;
  }
  
  .category-item {
    padding: 1rem 0;
  }
}

@media (max-width: 576px) {
  .topics-header h1 {
    font-size: 2rem;
  }
  
  .topics-header .lead {
    font-size: 1.1rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const scrollContainer = document.getElementById('topicsScroll');
  const scrollLeftBtn = document.getElementById('scrollLeft');
  const scrollRightBtn = document.getElementById('scrollRight');
  
  if (scrollContainer && scrollLeftBtn && scrollRightBtn) {
    const scrollAmount = 200;
    
    function updateButtons() {
      const isAtStart = scrollContainer.scrollLeft <= 0;
      const isAtEnd = scrollContainer.scrollLeft >= 
        scrollContainer.scrollWidth - scrollContainer.clientWidth;
      
      scrollLeftBtn.disabled = isAtStart;
      scrollRightBtn.disabled = isAtEnd;
    }
    
    scrollLeftBtn.addEventListener('click', () => {
      scrollContainer.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });
    
    scrollRightBtn.addEventListener('click', () => {
      scrollContainer.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });
    
    scrollContainer.addEventListener('scroll', updateButtons);
    updateButtons();
  }
});
</script>