<!--this page accepts either category object or post object-->
<!--the business is same,so only use one ejs file for both category and topic-->

<%
// Determine if it's a category or topic page
  let typeObj;
  if(isCategory){
    typeObj=category;
  }else{
    typeObj=topic;
  }
%>

<!-- Compact card styles -->
<style>
  .topic-header-section {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 3rem 0;
    margin-bottom: 2rem;
  }
  
  .topic-title-custom {
    font-size: 2.5rem;
    font-weight: 700;
    color: #212529;
    margin-bottom: 1rem;
  }
  
  .custom-post-card {
    border: none;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    height: 420px;
  }
  
  .custom-post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }
  
  .custom-post-image {
    width: 100%;
    height: 180px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .custom-post-card:hover .custom-post-image {
    transform: scale(1.05);
  }
  
  .custom-card-body {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    height: 240px;
  }
  
  .custom-post-title {
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 0.75rem;
    color: #212529;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .custom-post-subtitle {
    color: #6c757d;
    line-height: 1.4;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex-grow: 1;
  }
  
  .custom-stats {
    font-size: 1.1rem;
    color: #495057;
  }
  
  .custom-section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #212529;
  }

  .reading-time-badge {
    background: rgba(0,0,0,0.7);
    color: white;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
  }

  /* Ensure 3 cards per row on larger screens */
  @media (min-width: 992px) {
    .custom-grid-3 .col {
      flex: 0 0 33.333333%;
      max-width: 33.333333%;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 991px) {
    .custom-post-card {
      height: auto;
    }
    .custom-card-body {
      height: auto;
    }
  }
</style>

<div class="topic-header-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h1 class="topic-title-custom"><%= typeObj.name %></h1>
        <p class="lead text-muted mb-4">Discover amazing stories and insights</p>
        
        <div class="d-flex justify-content-center align-items-center gap-4 flex-wrap mb-4">
          <button class="base-follow-btn" id="topicFollowBtn" data-topic-id="<%= typeObj.id %>">
            <i class="bi bi-plus-lg me-2"></i>Follow Topic
          </button>
        </div>
        
        <div class="d-flex justify-content-center gap-4 custom-stats">
          <span class="followers-count">
            <i class="bi bi-people-fill me-2 text-primary"></i>
            <strong><%= typeObj._count.followers || 0 %></strong> followers
          </span>
          <span>
            <i class="bi bi-file-text-fill me-2 text-success"></i>
            <strong><%= typeObj._count.posts || 0 %></strong> stories
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-11">
      
      <div class="text-center mb-5">
        <h2 class="custom-section-title">Related Articles</h2>
        <p class="text-muted">Explore the best stories from this topic</p>
      </div>

      <!-- 3 Cards per row with compact design -->
      <div class="row custom-grid-3 g-4 mb-5">
      <!--to show only three Posts-->
        <% typeObj.posts.slice(0,3).forEach(post => { %>
            <div class="col">
            <div class="card custom-post-card">
              <div class="position-relative overflow-hidden">
                <a href="/posts/<%= post.id %>">
                  <% if (post.imageUrl) { %>
                    <img src="<%= post.imageUrl %>" alt="<%= post.title %>" class="custom-post-image">
                  <% } else { %>
                    <img src="/images/defaultPostImage.avif" alt="Default Post Image" class="custom-post-image">
                  <% } %>
                </a>
                <div class="position-absolute top-0 end-0 m-2">
                  <span class="badge reading-time-badge">
                    <i class="bi bi-clock me-1"></i><%= post.readTime || '5 min' %>
                  </span>
                </div>
              </div>
              
              <div class="custom-card-body">
                <a href="/posts/<%= post.id %>" class="text-decoration-none">
                  <h3 class="custom-post-title"><%= post.title %></h3>
                </a>
                <p class="custom-post-subtitle"><%= post.subtitle %></p>
                
                <div class="mt-auto">
                  <%- include('../partials/authorInfoBar',{post,currentUser})%>
                </div>
              </div>
            </div>
          </div>
        <% }) %> <!--end for loop-->
      </div>

      <div class="text-center">
        <a href="/topics/<%= typeObj.slug %>/stories" class="base-showmore-btn">
          <i class="bi bi-arrow-right me-2"></i>
          Show More Related Stories
        </a>
      </div>

    </div>
  </div>
</div>
